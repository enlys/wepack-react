{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react", // react18这里也可以改成react-jsx
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": false, // 允许隐式的any类型
    "lib": ["esnext", "dom"]
  },
  "include": [
    "**/*",
    "*.ts",
    "*.tsx",
    "**/*.d.ts"
  ]
}
